<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="ic_base_log.service.javascript_error_service_class">IC\Bundle\Base\LogBundle\Service\JavaScriptErrorLogService</parameter>
    </parameters>


    <services>

        <service id="ic_base_log.service.javascript_error_service"
                 class="%ic_base_log.service.javascript_error_service_class%">
            <call method="setLogger">
                <argument type="service" id="logger" />
            </call>
            <tag name="monolog.logger" channel="javascript_error" />
        </service>

    </services>

</container>
